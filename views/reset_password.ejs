<!DOCTYPE html>
<html lang="fa-ir">
<head>
    <title>DMC</title>
    <% include partials/head %>
    <style type="text/css">
        .strength-meter{
            margin: 0 auto;
            border-radius: 5px;
            display: inline-block !important;
            position: absolute;
            top: 0;
            left: 105%;
            opacity: 0.6;
            text-align: center;
            width: 80px;
        }
        @media screen and (max-width: 992px){
            .strength-meter{
                display: none !important;
            }
        }
    </style>
</head>
<body>
<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center"><%=user.username%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="<%=baseURL%>/reset/<%= token %>" method="POST">
                <div class="form-group" style="position: relative;">
                    <input class="form-control" type="password" name="password" placeholder="password" required data-validation="strength" data-validation-strength="1" autofocus>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password_r" placeholder="repeat password" required data-validation="confirmation" data-validation-confirm="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-warning btn-block">تنظیم مجدد گذرواژه</button>
                </div>
            </form>
            <a class="btn btn-primary" href="<%=baseURL%>/login">بازگشت</a>
        </div>
    </div>
</div>
<% include partials/footer %>
<% include partials/formvalidation %>
<script>
    $.validate({
      modules : 'security',
      onModulesLoaded : function() {
        var optionalConfig = {
              bad : 'خیلی بده',
              weak : 'ضعیفه',
              good : 'خوبه',
              strong : 'قویه'
            };
        $('input[name="password"]').displayPasswordStrength(optionalConfig);
      }
    });
</script>
</body>
</html>